#!/bin/sh

##########################################
# Word alignment with Berkeley aligner:
##########################################

if [ $# -lt 1 ] 	
	then
  		echo "Usage: $0 <memory> <configuration file>"
  		exit 1
fi

MEM=$1
CONF=$2
shift
shift

OPTS="-XX:+UseCompressedOops -Xmx$MEM -Xms$MEM -XX:MaxPermSize=2g"

java $OPTS -jar /u/nlp/packages/berkeleyaligner2.1/berkeleyaligner.jar ++$CONF $@ 

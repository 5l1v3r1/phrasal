<project name="Phrasal" default="compile" basedir=".">
    <description>
        Phrasal machine translation system.
    </description>
  <property name="src" location="src"/>
  <property name="classes" location="classes"/>
  <property environment="env"/>


  <target name="init">
    <mkdir dir="${classes}"/>
  </target>

   <target name="classpath" description="Sets the classpath">
    <echo message="${ant.project.name}" />
    <path id="classpath">
      <!-- depends on local libs -->
      <fileset dir="${basedir}/lib">
        <include name="*.jar"/>
      </fileset>

      <fileset dir="${basedir}/lib-nodistrib">
        <include name="*.jar"/>
      </fileset>
      <fileset dir="${env.CORENLP}">
        <include name="*.jar"/>
      </fileset>
    </path>
  </target>

			
  <target name="compile" depends="init,classpath"
        description="compile the source">
    <echo message="${env.CLASSPATH}"/>
    <javac srcdir="${src}" destdir="${classes}"
        includeantruntime="false">
        <classpath refid="classpath" />
    </javac>
    <!-- copy application resources -->
     <copy todir="${classes}">
      <fileset dir="${src}" excludes="**/*.java,**/*.html"/>
    </copy>
  </target>

  <target name="clean"
        description="clean up" >
    <delete dir="${classes}"/>
  </target>
  <target name="all" depends="clean,compile"
          description="Clean and re-compile." />
</project>
